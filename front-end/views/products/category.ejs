<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <%- include('../components/layout/header.ejs') %>

    <!-- Display categories from database -->

    <!-- Categories Banner -->
    <div class="container my-4">
      <div class="d-flex flex-wrap align-items-center">
        <% categories.forEach(category => { %>
        <a
          href="/products/category/<%= category.name.toLowerCase() %>"
          class="me-3 text-decoration-none text-primary"
        >
          <%= category.name %>
        </a>
        <% }) %>
      </div>
    </div>

    <div class="container py-5">
      <h2 class="text-center mb-4"><%= category %></h2>

      <% if (products.length > 0) { %>
      <div class="row">
        <% products.forEach(product => { %>
        <div class="col-md-4 col-lg-3 mb-4">
          <div class="card h-100 shadow-sm">
            <img
              src="<%= product.imgurl || '/images/placeholder.jpg' %>"
              class="card-img-top"
              alt="<%= product.name %>"
            />
            <div class="card-body">
              <h5 class="card-title"><%= product.name %></h5>
              <p class="card-text"><%= product.description %></p>
              <p class="card-text text-success">
                $<%= product.price ? parseFloat(product.price).toFixed(2) :
                '0.00' %>
              </p>
              <a href="/products/<%= product.id %>" class="btn btn-primary">
                View Details
              </a>

              >
            </div>
          </div>
        </div>
        <% }) %>
      </div>
      <% } else { %>
      <p class="text-center">No products available in this category.</p>
      <% } %>
    </div>

    <%- include('../components/layout/footer.ejs') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
