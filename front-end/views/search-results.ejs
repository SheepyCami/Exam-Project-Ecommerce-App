<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>

    <!-- Include jQuery before other JS files -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- jQuery CDN -->

    <!-- Include Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <!-- Header -->
    <%- include('components/layout/header.ejs') %>

    <!-- Categories Banner -->
    <div class="container my-4">
      <div class="d-flex flex-wrap align-items-center">
        <% categories.forEach(function(category) { %>
        <a
          href="/products/category/<%= category.name.toLowerCase() %>"
          class="me-3 text-decoration-none text-primary"
        >
          <%= category.name %>
        </a>
        <% }); %>
      </div>
    </div>

    <!-- Search Results -->
    <div class="container mt-4">
      <h3 class="text-center">Search Results for "<%= keyword %>"</h3>
      <div id="search-results" class="row">
        <% if (products && products.length > 0) { %> <%
        products.forEach(function(product) { %>
        <div class="col-md-4 mb-4">
          <div class="card h-100 shadow-sm">
            <img
              src="<%= product.imgurl || '/images/placeholder.jpg' %>"
              class="card-img-top"
              alt="<%= product.name %>"
            />
            <div class="card-body">
              <h5 class="card-title"><%= product.name %></h5>
              <p class="card-text"><%= product.description %></p>
              <p class="text-success">
                Price: $<%= parseFloat(product.price).toFixed(2) %>
              </p>
              <a href="/product/<%= product.id %>" class="btn btn-primary"
                >View Product</a
              >
            </div>
          </div>
        </div>
        <% }); %> <% } else { %>
        <div class="alert alert-warning text-center">No products found.</div>
        <% } %>
      </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Ensure jQuery is loaded first -->
    <script src="/javascripts/search.js"></script>
    <!-- Your search.js should be included after jQuery -->
    <script
      src="https://kit.fontawesome.com/cfe2ac77ab.js"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
