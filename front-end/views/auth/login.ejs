<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <!-- Include Header -->
    <%- include('../components/layout/header.ejs') %>

    <div
      class="container d-flex justify-content-center align-items-center vh-100"
    >
      <div class="row w-100">
        <div class="col-12 col-md-6 mx-auto">
          <form
            class="shadow rounded bg-body p-4"
            action="/auth/login"
            method="POST"
          >
            <h2 class="mb-4 text-center">Login</h2>
            <!-- Email Input -->
            <div class="mb-3">
              <label for="email_field" class="form-label">Email</label>
              <input
                type="email"
                id="email_field"
                class="form-control"
                name="email"
                placeholder="Enter your email"
                required
              />
            </div>
            <!-- Password Input -->
            <div class="mb-3">
              <label for="password_field" class="form-label">Password</label>
              <input
                type="password"
                id="password_field"
                class="form-control"
                name="password"
                placeholder="Enter your password"
                required
              />
            </div>
            <!-- Forgot Password Link -->
            <a
              href="/password/forgot"
              class="float-end mb-4 text-decoration-none"
            >
              Forgot Password?
            </a>
            <!-- Login Button -->
            <button
              id="login_button"
              type="submit"
              class="btn btn-primary w-100 py-2"
            >
              LOGIN
            </button>
            <!-- Signup Link -->
            <div class="mt-3 text-center">
              <p>
                Don't have an account?
                <a
                  href="/auth/register"
                  class="text-primary text-decoration-none"
                  >Register here</a
                >.
              </p>
            </div>
          </form>
        </div>
      </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
